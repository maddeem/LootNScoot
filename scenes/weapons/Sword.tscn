script/source = "extends Node2D
@export var stat : StatHolder
@onready var action := ActionPoints.new(stat.speed.get_total,step)
@export var effect : PackedScene

func step():
	var enemies = PathFinder.get_enemies_in_range(global_position,stat.range.get_total())
	stat.count.increment()
	for i in range(min(enemies.size(),stat.count.use_total())):
		var e = enemies[i]
		var eff = effect.instantiate()
		eff.top_level = true
		add_child(eff)
		eff.rotation = Math.angle_between(e.nextPos,global_position)
		eff.global_position = e.nextPos
		e.queue_free()
"

